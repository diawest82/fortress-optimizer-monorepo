{
  "name": "website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "eslint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest src/__tests__",
    "test:api": "jest src/__tests__/api",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --maxWorkers=2",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:security": "jest src/__tests__/security",
    "test:performance": "jest src/__tests__/performance",
    "test:integration": "jest src/__tests__/integration",
    "test:all": "npm run type-check && npm run lint && npm run test:coverage && npm run test:e2e && npm run test:security",
    "test:ci": "jest --ci --coverage --maxWorkers=2 && playwright test --reporter=html",
    "backup:full": "bash scripts/backup-db.sh backup",
    "backup:verify": "bash scripts/backup-db.sh verify",
    "backup:restore": "bash scripts/backup-db.sh restore",
    "backup:list": "bash scripts/backup-db.sh list",
    "backup:cleanup": "bash scripts/backup-db.sh cleanup",
    "backup:rds:snapshot": "bash scripts/rds-snapshot.sh snapshot",
    "backup:rds:list": "bash scripts/rds-snapshot.sh list",
    "backup:rds:restore": "bash scripts/rds-snapshot.sh restore",
    "verify-deployment": "bash verify-deployment.sh",
    "deploy:staging": "npm run build && npm run test:ci && vercel --prod --scope fortress-optimizer",
    "deploy:production": "npm run build && npm run test:all && vercel --prod",
    "prestart": "prisma migrate deploy"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.21.1",
    "@sentry/integrations": "^7.114.0",
    "@sentry/nextjs": "^10.39.0",
    "@stripe/react-stripe-js": "^5.6.0",
    "@stripe/stripe-js": "^8.7.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.3",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.564.0",
    "mailgun.js": "^12.7.0",
    "next": "16.1.6",
    "next-auth": "^4.24.13",
    "prisma": "^5.21.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "resend": "^6.9.2",
    "stripe": "^20.3.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^4.0.18",
    "cypress": "^15.10.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "playwright": "^1.58.2",
    "supertest": "^7.2.2",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.6",
    "typescript": "^5",
    "vitest": "^4.0.18"
  },
  "description": "This is a [Next.js](https://nextjs.org) project bootstrapped with [`create-next-app`](https://nextjs.org/docs/app/api-reference/cli/create-next-app).",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC"
}
